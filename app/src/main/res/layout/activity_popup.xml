<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="250dp"
    android:background="@drawable/popup23"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginTop="54dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3sp"
        android:textColor="#313131"
        android:textSize="18sp"
        android:fontFamily="@font/nanumbarungothic"
        android:text="배우자가 티끌모아육아를 \n 사용하고 있나요?" />

    <TextView
        android:layout_width="132dp"
        android:layout_height="16dp"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:textColor="#313131"
        android:textSize="12sp"
        android:fontFamily="@font/nanumbarungothic"
        android:text="상대방과 연동해보세요." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup14"
            android:gravity="center">

            <TextView
                android:fontFamily="@font/nanumbarungothic"
                android:id="@+id/createBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="가계부 생성" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup45"
            android:gravity="center">

            <TextView
                android:id="@+id/createLink"
                android:fontFamily="@font/nanumbarungothic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="연동하기" />
            >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>